<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditSupplier"
    android:padding="40dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Supplier"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="5dp"
        android:id="@+id/txtnamasupplier"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=""
        android:background="@drawable/style_white"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:fontFamily="sans-serif"
        android:id="@+id/namasupplier"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="5dp"
        android:id="@+id/txtalamat"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=""
        android:background="@drawable/style_white"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:fontFamily="sans-serif"
        android:id="@+id/alamat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Telp"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="5dp"
        android:id="@+id/txtnotelp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=""
        android:background="@drawable/style_white"
        android:layout_marginBottom="20dp"
        android:paddingLeft="10dp"
        android:fontFamily="sans-serif"
        android:id="@+id/notelp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:background="@drawable/style_button_menu_white"
        android:layout_gravity="center"
        android:id="@+id/button"/>

</LinearLayout>